		</resource_data>
	</resource>
	
	<resource type="actor">
	
		<name>coloredCubesActor</name>
		<resource_data>
			
			<mobility type="string">Static</mobility>
			<transform>
				<x type="double">-10.0</x>
				<y type="double">0.0</y>
				<z type="double">0.0</z>
			</transform>

			<staticMeshComponent type="resource;staticMeshComponent">coloredCubesComponent</staticMeshComponent>
			
		</resource_data>
	</resource>
	
