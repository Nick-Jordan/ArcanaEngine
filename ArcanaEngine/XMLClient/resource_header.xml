<?xml version="1.0" encoding="UTF-8"?>
<resource_header>
	<resource_type>texture</resource_type> <!--Resource type; must be registered with a creation struct-->
	<value> <!--Defines a value save in the binary resource data-->
		<name>width</name> <!--The name of the value-->
		<type>integer</type> <!--The primitive type of the value; if the value is not a primitive, it must be registered with a serialized format-->
	</value>
	<value>
		<name>height</name>
		<type>integer</type>
	</value>
	<value>
		<name>format</name>
		<type>string</type>
		<processMethod>texture_format</processMethod> <!--Method for processing the data point; must be registered with the resource manager-->
	</value>
	<value>
		<name>internal_format</name>
		<type>string</type>
		<processMethod>texture_internal_format</processMethod> <!--The process method sets the resource's value to the data point.-->
	</value>
	<value>
		<name>data</name>
		<type>string</type>
		<processMethod>texture_data</processMethod>
	</value>
</resource_header>